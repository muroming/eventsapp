<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:padding="@dimen/default_margin"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#FFFFFF"
        app:cardCornerRadius="8dp">

        <EditText
            android:id="@+id/et_meeting_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Название встречи"
            android:layout_margin="@dimen/default_margin"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="@color/menu" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        app:cardCornerRadius="8dp">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/category"
        android:layout_margin="@dimen/default_margin"
        android:background="#FFFFFF">

    </Spinner>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#FFFFFF"
        app:cardCornerRadius="8dp">

        <EditText
            android:id="@+id/et_meeting_description"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="Описание встречи"
            android:inputType="text"
            android:maxLines="3"
            android:textColor="@color/menu"
            android:layout_margin="@dimen/default_margin"/>

    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#FFFFFF"
        app:cardCornerRadius="8dp">

        <TextView
            android:id="@+id/meeting_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:hint="Время"
            android:textSize="20sp"
            android:textColor="@color/menu" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#FFFFFF"
        app:cardCornerRadius="8dp">

        <TextView
            android:id="@+id/meeting_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:textColor="@color/menu"
            android:text="Дата"
            android:textSize="20sp" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#FFFFFF"
        app:cardCornerRadius="8dp">

        <TextView
            android:id="@+id/tv_place_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Выбрать место встречи"
            android:textSize="20sp"
            android:textColor="@color/menu"
            android:layout_margin="@dimen/default_margin"/>

    </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_create_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:backgroundTint="#FFFFFF"
            android:hint="Создать"
            android:textSize="20sp"
            android:textColor="@color/menu"
            android:layout_marginTop="30dp"/>



</LinearLayout>