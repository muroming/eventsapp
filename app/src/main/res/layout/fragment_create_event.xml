<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:alpha="0.3"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:cardCornerRadius="8dp">

        <EditText
            android:id="@+id/et_meeting_name"
            android:layout_width="240dp"
            android:layout_height="44dp"
            android:hint="Название встречи"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="#FFFFFF" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:alpha="0.3"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:cardCornerRadius="8dp">

        <EditText
            android:id="@+id/et_meeting_description"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="Описание встречи"
            android:inputType="text"
            android:maxLines="3"
            android:padding="8dp"
            android:textColor="#FFFFFF" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:alpha="0.3"
        android:padding="8dp">

    </android.support.v7.widget.AppCompatSpinner>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:alpha="0.3"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:cardCornerRadius="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:hint="Дата"
            android:textColor="#FFFFFF" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:alpha="0.3"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:cardCornerRadius="8dp">

        <TextView
            android:id="@+id/meeting_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:alpha="0.3"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:cardCornerRadius="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:hint="Время"
            android:textColor="#FFFFFF" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:alpha="0.3"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:cardCornerRadius="8dp">

        <TextView
            android:id="@+id/meeting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:alpha="0.3"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:cardCornerRadius="8dp">

        <TextView
            android:id="@+id/tv_place_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#34FFFFFF"
            android:padding="8dp"
            android:hint="Выбрать место встречи" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:alpha="0.3"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:cardCornerRadius="8dp">

        <Button
            android:id="@+id/btn_create_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:hint="Создать" />


    </android.support.v7.widget.CardView>


</LinearLayout>