<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradient">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/default_margin"
        android:layout_margin="@dimen/default_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin">

        <ImageView
            android:id="@+id/iv_burger"
            android:layout_width="@dimen/burger"
            android:layout_height="@dimen/burger"
            android:layout_gravity="center_vertical"
            android:src="@drawable/bububububurger"
            android:layout_margin="@dimen/default_margin"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/category"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_switch_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.PagerTabStrip
            android:id="@+id/pts_switch_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginLeft="@dimen/default_margin"
            style="@style/viewPagerTitleStrip"/>

    </android.support.v4.view.ViewPager>

</LinearLayout>